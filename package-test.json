{
  "name": "voodoohemp-payment-processor",
  "version": "1.0.0",
  "description": "Crypto payment processor for hemp/CBD and cannabis industry",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:security": "jest --testPathPattern=tests/security",
    "test:payment-flows": "jest --testPathPattern=tests/payment-flows"
  },
  "keywords": [
    "crypto",
    "payment",
    "processor",
    "hemp",
    "cbd",
    "cannabis",
    "blockchain",
    "stablecoin",
    "token"
  ],
  "author": "VoodooHemp",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "web3": "^4.2.0",
    "ethers": "^6.8.1",
    "mongoose": "^8.0.3",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "node-cron": "^3.0.3",
    "axios": "^1.6.2",
    "multer": "^1.4.5-lts.1",
    "winston": "^3.11.0",
    "compression": "^1.7.4",
    "express-mongo-sanitize": "^2.2.0",
    "hpp": "^0.2.3",
    "stripe": "^14.7.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^9.1.3",
    "jest-environment-node": "^29.7.0",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint-plugin-jest": "^27.6.0",
    "faker": "^6.6.6",
    "sinon": "^17.0.1",
    "nock": "^13.4.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup/jest.setup.js"],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "server/**/*.js",
      "!server/index.js",
      "!server/tests/**",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testTimeout": 30000
  }
}



